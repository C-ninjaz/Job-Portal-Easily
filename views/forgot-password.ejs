<div class="container">
    <div class="row justify-content-center">
        <div class="col-lg-5 col-md-7 col-sm-9">
            <div class="card shadow-sm rounded-3 border-0 mt-4">
                <div class="card-body p-4">
                    <h3 class="mb-3 text-center" style="color:#181642;">Forgot Password</h3>
                    <p class="text-muted text-center mb-4">Enter your email address and we'll send you a reset link.</p>

                    <% if (typeof sent !=='undefined' && sent) { %>
                        <div class="alert alert-success" role="alert">
                            If an account exists for that email, you'll receive a reset link shortly.
                        </div>
                    <% } %>

                    <form action="/forgot-password" method="post">
                                <div class="mb-3">
                                    <label class="form-label">Email</label>
                                    <input type="email" name="email" class="form-control" placeholder="you@example.com"
                                        required />
                                </div>
                                <div class="d-grid gap-2">
                                    <button class="btn btn-primary" type="submit">Send Reset Link</button>
                                    <a href="/login" class="btn btn-outline-secondary">Back to Login</a>
                                </div>
                            </form>
                </div>
            </div>
        </div>
    </div>
</div>