<div class="container">
    <div class="row justify-content-center">
        <div class="col-lg-5 col-md-7 col-sm-9">
            <div class="signup-container p-4 rounded-3 shadow-sm">
                <h2 class="text-center mb-4" style="color: #181642;">Create Seeker Account</h2>
                <form action="/seeker/register" method="post">
                    <div class="mb-3">
                        <label class="form-label">Full Name</label>
                        <input type="text" name="name" class="form-control" placeholder="Your name" required />
                    </div>
                    <div class="mb-3">
                        <label class="form-label">Email</label>
                        <input type="email" name="email" class="form-control" placeholder="you@example.com" required />
                    </div>
                    <div class="mb-3">
                        <label class="form-label">Password</label>
                        <input type="password" name="password" class="form-control"
                            placeholder="Choose a strong password" required />
                    </div>
                    <div class="d-grid">
                        <button type="submit" class="btn btn-primary rounded-3">Create Account</button>
                    </div>
                    <div class="text-center mt-3">
                        <p class="text-muted small mb-0">Already have an account? <a href="/seeker/login"
                                class="text-primary">Login</a></p>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

<style>
    .signup-container {
        background: #fff;
        border: 1px solid #e5e7eb;
        max-width: 420px;
        margin: 3rem auto;
    }

    .btn-primary {
        background-color: var(--primary-color);
        border-color: var(--primary-color);
    }

    .btn-primary:hover {
        background-color: var(--secondary-color);
        border-color: var(--secondary-color);
    }
</style>